@page
@model FamilyHubs.ServiceDirectoryAdminUi.Ui.Pages.OrganisationAdmin.InPersonWhereModel
@{
}

<a asp-page="/OrganisationAdmin/ServiceDeliveryType" asp-route-strOrganisationViewModel="@Model.StrOrganisationViewModel" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper " id="main-content" role="main">

     <fieldset class="govuk-fieldset">
        <h1 class="govuk-fieldset__heading-l">
            Address
        </h1>
         <br />
        <p class="govuk-body">Give an address where families use the service. This helps people find the service when they search by location. </p>
        <p class="govuk-body">If families can go to different addresses, give the main one. You can add others later.</p>

      <form method="post">

        <input asp-for="@Model.StrOrganisationViewModel" type="hidden" >


        <h2 class="govuk-heading-m">What is the address?</h2>
        <div class="govuk-form-group">
              <div class="govuk-form-group">
                <label class="govuk-label" for="address-line-1">
                  Address line 1
                </label>
                <input class="govuk-input" id="Address_1" name="Address_1" type="text" value="@Model.Address_1" autocomplete="Address_1">
              </div>

              @*<div class="govuk-form-group">
                <label class="govuk-label" for="address-line-2">
                  Address line 2 (optional)
                </label>
                <input class="govuk-input" id="address-line-2" name="address-line-2" type="text" autocomplete="address-line2">
              </div>*@

              <div class="govuk-form-group">
                <label class="govuk-label" for="address-town">
                  Town or city
                </label>
                <input class="govuk-input" id="City" name="City" type="text" value="@Model.City" autocomplete="City">
              </div>

              <div class="govuk-form-group">
                <label class="govuk-label" for="address-county">
                  County (optional)
                </label>
                <input class="govuk-input govuk-!-width-two-thirds" id="State_province" name="State_province" type="text" value="@Model.State_province" autocomplete="State_province">
              </div>

              <div class="govuk-form-group">
                <label class="govuk-label" for="address-postcode">
                  Postcode
                </label>
                <input class="govuk-input govuk-input--width-10" id="Postal_code" name="Postal_code" type="text" value="@Model.Postal_code" autocomplete="Postal_code">
              </div>
         </div>

      <button class="govuk-button">
        Continue
      </button>
    </form>
    </fieldset>
</main>


